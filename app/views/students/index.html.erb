<p id="notice"><%= notice %></p>

<h2>Procurar membro</h2>
<%= form_tag students_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Procurar", :name => nil %>
	</p>
<% end %>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Given name</th>
      <th>Family name</th>
      <th>Email</th>
      <th>Team</th>
      <th>Admin?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= image_tag(student.photo_url) %></td>
        <td><%= student.given_name %></td>
        <td><%= student.family_name %></td>
        <td><%= student.email %></td>
        <td><%= link_to student.team.name, team_path(@student.team_id) %></td>
        <td><%= student.admin %></td>
        <td><%= link_to 'Show', student %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
