<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <%#<th>Accepted</th>%>
      <th>Returned</th>
      <th>Borrower</th>
      <th>Owner</th>
      <th>Tool quantity</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <%#<td><%= loan.accepted %></td>%>
        <td><%= loan.returned %></td>
        <td><%= link_to Student.find(loan.borrower_id).name, student_path(loan.borrower_id) %></td>
        <td><%= link_to Student.find(loan.owner_id).name, student_path(loan.owner_id) %></td>
        <td><%= loan.tool_quantity %></td>
        <td><%= loan.start %></td>
        <td><%= loan.end %></td>
        <td><%= link_to 'Show', [@tool,loan] %></td>
        <td><%= link_to 'Edit', edit_tool_loan_path(@tool,loan) %></td>
        <td><%= link_to 'Destroy', [@tool,loan], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

