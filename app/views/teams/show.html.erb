<p id="notice"><%= notice %></p>

<%= image_tag(@team.photo_url) %>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @team.description %>
</p>

<h3>Tools</h3>
<% if !@team.tools.empty? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
    </tr>
  <% @team.tools.each do |tool| %>
    <tr>
      <td><%= tool.name %></td>
      <td><%= tool.quantity %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p><%= @team.name %> hasn't won any tools yet.</p>
<% end %>

<h3>Students</h3>
<% if !@team.students.empty? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  <% @team.students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p><%= @team.name %> hasn't won any students yet.</p>
<% end %>

<% if @student.admin %>
  <%= link_to 'Edit', edit_team_path(@team) %> |
<% end %>
<%= link_to 'Back', teams_path %>
