<p id="notice"><%= notice %></p>

<h2>Procurar equipe</h2>
<%= form_tag teams_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Procurar", :name => nil %>
	</p>
<% end %>

<% @teams.each do |team| %>
	<% if team.students.empty? %>
		<% team.destroy %>
	<% end %>
<% end %>


<h1>Teams</h1>

<table>
  <thead>
    <tr>
			<th><!--Photo--></th>
      <th>Name</th>
      <th>Description</th>
			<th>Tool Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
				<td><%= image_tag(team.photo_url) %></td>
        <td><%= link_to team.name, team %></td>
        <td><%= team.description %></td>
        <td><%= team.tools.count %></td>
        <td><%= team.students.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
